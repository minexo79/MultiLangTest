        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiLangTest.View"
        xmlns:ui="http://schemas.modernwpf.com/2019"
        xmlns:i18n="clr-namespace:Lepo.i18n;assembly=Lepo.i18n"
        ui:WindowHelper.UseModernWindowStyle="True"
        mc:Ignorable="d"
        Title="Notify" Height="80" SizeToContent="Width" FontFamily="Microsoft JhengHei UI">
    <Grid>
        <ui:SimpleStackPanel Margin="12" Spacing="12">
            <Label Content="{i18n:Translate String='notify.title'}" />
